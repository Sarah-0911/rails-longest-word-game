<div class="container">
  <h1 class="title">New Game</h1>
  <% @letters.each do |letter| %>
  <h2 class="letter"><%= letter %></h2>
  <% end %>
</div>
<form class="form" action="/score" method="post" data-turbo="false">
  <legend>What is the longest word you can find?</legend>
  <input class="input" type="text" name="word">
  <input class="play" type="submit" value ="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
